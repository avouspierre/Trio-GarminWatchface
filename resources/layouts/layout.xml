<layout id="WatchFace">
    <drawable class="Background" />

    <!-- Time -->
    <text-area id="TimeLabel" width="fill" height="20%" x="center" y="10%" font="Graphics.FONT_LARGE" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />

    <drawable id="line1" />

    <!-- These labels are hidden and drawn manually - kept for code compatibility -->
    <label id="IOBLabel" text="" x="0" y="0" font="Gfx.FONT_MEDIUM" color="Graphics.COLOR_TRANSPARENT" />
    <label id="COBLabel" text="" x="0" y="0" font="Gfx.FONT_MEDIUM" color="Graphics.COLOR_TRANSPARENT" />
    <label id="EventualBGLabel" text="" x="0" y="0" font="Gfx.FONT_MEDIUM" color="Graphics.COLOR_TRANSPARENT" />
    
    <!-- Bitmap icons - positioned manually in code but must be defined here -->
    <bitmap id="ISFIcon" filename="../drawables/UpDown.svg" scaleX="6%" scaleY="6%" scaleRelativeTo="screen">
        <palette>
            <color>00FF00</color>
        </palette>
    </bitmap>
    <bitmap id="EventualIcon" filename="../drawables/Flat.svg" scaleX="6%" scaleY="6%" scaleRelativeTo="screen">
        <palette>
            <color>FFFFFF</color>
        </palette>
    </bitmap>

    <drawable id="line2" />

    <!-- Heart Rate and Steps - still using layout positions -->
    <drawable id="HeartRate" />
    <label id="HRLabel" text="--" x="30%" y="68%" font="Gfx.FONT_TINY" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_LEFT|Gfx.TEXT_JUSTIFY_VCENTER" />
    
    <drawable id="StepsIcon" />
    <label id="StepsLabel" text="--" x="58%" y="68%" font="Gfx.FONT_TINY" color="Graphics.COLOR_LT_GRAY" justification="Graphics.TEXT_JUSTIFY_LEFT|Gfx.TEXT_JUSTIFY_VCENTER" />

    <!-- Date -->
    <text-area id="DateLabel" width="fill" height="20%" x="center" y="75%" font="Graphics.FONT_SYSTEM_LARGE" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Graphics.COLOR_WHITE" />
</layout>